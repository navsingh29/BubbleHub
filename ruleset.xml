<?xml version="1.0"?>
<ruleset name="BubbleHub Ruleset"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

  <description>
  This ruleset will check code for following items:
   - Correct Use of Braces
   - Code Size
   		- ExcessiveMethodLength
  </description>

  <!-- We'll use the entire 'braces' ruleset -->
  <rule ref="rulesets/java/braces.xml">
  
  
  <!-- Customizing brace ruleset rule's property values-->
  <rule ref="rulesets/java/braces.xml/IfStmtsMustUseBraces">
    <properties>
        <property name="smellLevel" value="2"/>
    </properties>
  </rule>
  
  <rule ref="rulesets/java/braces.xml/WhileLoopsMustUseBraces">
    <properties>
        <property name="smellLevel" value="2"/>
    </properties>
  </rule>
  
  <rule ref="rulesets/java/braces.xml/IfElseStmtsMustUseBraces">
    <properties>
        <property name="smellLevel" value="2"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/braces.xml/ForLoopsMustUseBraces">
    <properties>
        <property name="smellLevel" value="2"/>
    </properties>
  </rule>
  
  <!-- Some rules from the CodeSize ruleset -->
  <rule ref="rulesets/java/codesize.xml/ExcessiveMethodLength"/>
  <rule ref="rulesets/java/codesize.xml/ExcessiveParameterList"/>
  <rule ref="rulesets/java/codesize.xml/ExcessiveClassLength"/>


  <!-- Customized Property Value for the Codesize rules -->
  <rule ref="rulesets/java/codesize.xml/ExcessiveMethodLength">
    <properties>
        <property name="smellLevel" value="5"/>
    </properties>
  </rule>
  
  <rule ref="rulesets/java/codesize.xml/ExcessiveParameterList">
    <properties>
        <property name="smellLevel" value="5"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/codesize.xml/ExcessiveClassLength">
    <properties>
        <property name="smellLevel" value="5"/>
    </properties>
  </rule>
  
  <!-- We'll use the entire 'Unused Code' ruleset -->
  <rule ref="rulesets/java/unusedcode.xml">
  
  
  <!-- Customizing UnusedCode ruleset rule's property values-->
  <rule ref="rulesets/java/unusedcode.xml/UnusedPrivateField">
    <properties>
        <property name="smellLevel" value="3"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/unusedcode.xml/UnusedLocalVariable">
    <properties>
        <property name="smellLevel" value="3"/>
    </properties>
  </rule> 

  <rule ref="rulesets/java/unusedcode.xml/UnusedPrivateMethod">
    <properties>
        <property name="smellLevel" value="3"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/unusedcode.xml/UnusedFormalParameter">
    <properties>
        <property name="smellLevel" value="3"/>
    </properties>
  </rule>
  
  <!-- We'll use the entire 'Unused Code' ruleset -->
  <rule ref="rulesets/java/empty.xml">  

  <rule ref="rulesets/java/empty.xml/EmptyCatchBlock">
    <properties>
        <property name="smellLevel" value="4"/>
    </properties>
  </rule>
  
  <rule ref="rulesets/java/empty.xml/EmptyIfStmt">
    <properties>
        <property name="smellLevel" value="4"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/empty.xml/EmptyWhileStmt">
    <properties>
        <property name="smellLevel" value="4"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/empty.xml/EmptyTryBlock">
    <properties>
        <property name="smellLevel" value="4"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/empty.xml/EmptySwitchStmt">
    <properties>
        <property name="smellLevel" value="4"/>
    </properties>
  </rule>
  
  <!-- Some rules from the CodeSize ruleset -->
  <rule ref="rulesets/java/import.xml/DuplicateImports"/>
  <rule ref="rulesets/java/import.xml/UnusedImports"/>
  <rule ref="rulesets/java/import.xml/ImportFromSamePackage"/>
  <rule ref="rulesets/java/import.xml/DontImportJavaLang"/>
  
  <rule ref="rulesets/java/imports.xml/DuplicateImports">
    <properties>
        <property name="smellLevel" value="4"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/imports.xml/UnusedImports">
    <properties>
        <property name="smellLevel" value="4"/>
    </properties>
  </rule>
  
  <rule ref="rulesets/java/imports.xml/ImportFromSamePackage">
    <properties>
        <property name="smellLevel" value="4"/>
    </properties>
  </rule>
  
  <rule ref="rulesets/java/imports.xml/DontImportJavaLang">
    <properties>
        <property name="smellLevel" value="4"/>
    </properties>
  </rule>
  
</ruleset>
