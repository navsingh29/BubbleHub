<?xml version="1.0"?>
<ruleset name="BubbleHub Ruleset"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

  <description>
  This ruleset will check code for following items:
   - Correct Use of Braces
   - Code Size
   		- ExcessiveMethodLength
  </description>

  <!-- We'll use the entire 'braces' ruleset -->
  <rule ref="rulesets/java/braces.xml">
  
  
  <!-- Customizing brace ruleset rule's property values-->
  <rule ref="rulesets/java/braces.xml/IfStmtsMustUseBraces">
    <properties>
        <property name="smellLevel" value="2"/>
    </properties>
  </rule>
  
  <rule ref="rulesets/java/braces.xml/WhileLoopsMustUseBraces">
    <properties>
        <property name="smellLevel" value="2"/>
    </properties>
  </rule>
  
  <rule ref="rulesets/java/braces.xml/IfElseStmtsMustUseBraces">
    <properties>
        <property name="smellLevel" value="2"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/braces.xml/ForLoopsMustUseBraces">
    <properties>
        <property name="smellLevel" value="2"/>
    </properties>
  </rule>
  
  <!-- Some rules from the CodeSize ruleset -->
  <rule ref="rulesets/java/codesize.xml/ExcessiveMethodLength"/>
  <rule ref="rulesets/java/codesize.xml/ExcessiveParameterList"/>
  <rule ref="rulesets/java/codesize.xml/ExcessiveClassLength"/>


  <!-- Customized Property Value for the Codesize rules -->
  <rule ref="rulesets/java/codesize.xml/ExcessiveMethodLength">
    <properties>
        <property name="smellLevel" value="5"/>
    </properties>
  </rule>
  
  <rule ref="rulesets/java/codesize.xml/ExcessiveParameterList">
    <properties>
        <property name="smellLevel" value="5"/>
    </properties>
  </rule>

  <rule ref="rulesets/java/codesize.xml/ExcessiveClassLength">
    <properties>
        <property name="smellLevel" value="5"/>
    </properties>
  </rule>
  
</ruleset>
